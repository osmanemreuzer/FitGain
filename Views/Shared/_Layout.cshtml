<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitGain</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitGain.styles.css" asp-append-version="true" />
</head>
<body>
   <header>
    <nav class="navbar navbar-dark bg-dark border-bottom box-shadow">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            
            <a href="/posts" class="navbar-brand custom-brand fs-3 fw-semibold text-light">
                FitGain 🏋️‍♂️
            </a>

            
            <div class="d-flex align-items-center ms-auto">
                @if(User!.Identity!.IsAuthenticated)
                {
                    <a href="/profile/@User.Identity?.Name" class="nav-link text-light fs-5 fw-semibold me-3"><i class="bi bi-person-circle me-1"></i>@User.Identity?.Name</a>
                    <a href="/posts/list" class="nav-link text-light fs-5 fw-semibold me-3"><i class="bi bi-file-earmark-check-fill me-1"></i>Posts</a>
                    <a href="/posts/create" class="nav-link text-light fs-5 fw-semibold me-3"><i class="bi bi-file-earmark-plus-fill me-1"></i>NewPost</a>
                    <a href="/users/logout" class="nav-link text-light fs-5 fw-semibold"><i class="bi bi-escape me-1"></i>Logout</a>
                }
                else
                {
                    <a href="/users/login" class="nav-link text-light fs-5 fw-semibold me-3"><i class="bi bi-box-arrow-in-right me-1"></i>Login</a>
                    <a href="/users/register" class="nav-link text-light fs-5 fw-semibold"><i class="bi bi-person-plus-fill me-1"></i>Register</a>
                }
            </div>
        </div>
    </nav>
</header>




    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
